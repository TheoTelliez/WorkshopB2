{% extends "base.html.twig" %}
{% block style %}<link href="css/style-signin.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} Ajout équipement {% endblock %}

{% block contenu %}

    <div class="wrapper" style="text-align: center">
        <div class="panel panel-default">
            <!-- Table -->
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <tr>
                        <th style="text-align: center">Équipement</th>
                        <th style="text-align: center">kWh</th>
                        <th style="text-align: center">Édition</th>
                        <th style="text-align: center">Supression</th>


                    </tr>
                    {% for l in liste %}
                        <tr>
                            <td>{{l.nom}}</td>
                            <td>{{l.watt}}</td>
                            <td>
                                <div class="btn-group btn-group-lg">
                                    <a href="index.php?page=modifequipements&id={{l.id}}">
                                        <span class="glyphicon glyphicon-pencil"aria-hidden="true">
                                        </span>
                                    </a>
                                </div>
                            </td>

                            <td>
                                <div class="btn-group btn-group-lg">
                                    <a href="index.php?page=ajoutequipement&id={{l.id}}">
                                        <span class="glyphicon glyphicon-trash" ariahidden="true">
                                        </span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>

        <form class="form-signin" action="index.php?page=ajoutequipement" method="post"
              enctype="application/x-www-form-urlencoded">


            <h1 class="h1 mb-3 font-weight-normal">Ajoutez un équipement</h1>

            <h1 class="h1 mb-3 font-weight-normal"> </h1>

            <label for="inputLang" class="sr-only">Nom:</label>
            <input type="text" id="inputLang" name="inputLang" class="form-control"
                   placeholder="Saisir un équipement" required autofocus>

            <label for="inputWatt" class="sr-only">Puissance:</label>
            <input type="number" id="inputWatt" name="inputWatt" class="form-control" min="0" max="10" step="0.1"
                   placeholder="Saisir la puissance de l'appareil (en kWh)" required autofocus>

            <button class="btn btn-lg btn-primary btn-block" type="submit"
                    name="btLang" id="btLang">Ajouter</button>
        </form>

    </div>
{% endblock %} 