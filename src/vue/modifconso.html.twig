{% extends "base.html.twig" %}
{% block style %}<link href="css/style-signin.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} Modifier ma consommation {% endblock %}

{% block contenu %}


    {% if form.language is defined %}

    {% if form.language != null %}


        <div class="wrapper" style="text-align: center">

            <br /><br />
            <h1 style="color: #3c763d">Modifier la consommation de l'appareil : {{form.language.nom}}  </h1>


            <form class="form-signin" action="index.php?page=modifconso" method="post"
                  enctype="application/x-www-form-urlencoded">
                <h6 class="h6 mb-3 font-weight-normal"> </h6>

                <h6 class="h6 mb-3 font-weight-normal"> </h6>




                {% for op in listeconso %}

                <label for="inputHPJ" class="sr-only">ModifHPJ</label>


                <input value="{{op.hpj}}" min="0" max="24" step="0.1" type="number" id="inputHPJ" name="inputHPJ" class="form-control" placeholder="Modifier le nombre d'heures par jour pendant lesquelles l'appareil fonctionne" required>


                <label for="inputJPA" class="sr-only">ModifJPA</label>
                <input value="{{op.jpa}}" min="0" max="365" step="1" type="number" id="inputJPA" name="inputJPA" class="form-control" placeholder="Modifier le nombre de jours par an pendant lesquels l'appareil fonctionne." required>


                <input type="hidden" id="idlang" name="idlang" value="{{form.language.id}}" class="form-control">

                    <button class="btn btn-lg btn-primary btn-block" type="submit" name="btModifConso">Modifier</button>

                {% else%}

                    <label for="inputHPJ" class="sr-only">ModifHPJ</label>


                    <input value="" min="0" max="24" step="0.1" type="number" id="inputHPJ" name="inputHPJ" class="form-control" placeholder="Modifier le nombre d'heures par jour pendant lesquelles l'appareil fonctionne" required>


                    <label for="inputJPA" class="sr-only">ModifJPA</label>
                    <input value="" min="0" max="365" step="1" type="number" id="inputJPA" name="inputJPA" class="form-control" placeholder="Modifier le nombre de jours par an pendant lesquels l'appareil fonctionne." required>


                    <input type="hidden" id="idlang" name="idlang" value="{{form.language.id}}" class="form-control">

                    <button class="btn btn-lg btn-primary btn-block" type="submit" name="btModifConsoVide">Ajouter</button>



                {% endfor %}



            </form>

        </div>
        <br/><br/><br/>


    {% else %}
        <div class="wrapper" style="text-align: center">

        <br /><br />
        <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1>
        <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=equipements">Retourner sur la liste des equipements</a></h1>
        </div>
    {% endif %}
    {% else %}
        {% if form.valide == true %}
            <div class="wrapper" style="text-align: center">

            <br /><br />
            <h1 class="h3 mb-3 font-weight-normal">{{ form.message }} </h1>
            <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=equipements">Retourner sur la liste des equipements</a></h1>
            </div>
        {% else %}
            <div class="wrapper" style="text-align: center">

            <br /><br />
            <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1>
            <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=equipements">Retourner sur la liste des equipements</a></h1>
            </div>
        {% endif %}

    {% endif %}
{% endblock %}